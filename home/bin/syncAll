#!/bin/bash
find /home/groovymarty/website/home -type f | while read src; do
  targ=${src/website\/home\//}
  if [ -f "$targ" ]; then
    if [ "$src" -ot "$targ" ]; then
      echo "$targ has changed, copying to website/home"
      cp -p $targ $src
    elif [ "$targ" -ot "src" ]; then
      ccho "$src has changed, copying to target"
      cp -p $src $targ
    fi
  fi
done
